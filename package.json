{
  "name": "refactoring-test",
  "version": "1.0.0",
  "description": "javascript port of https://www.manning.com/books/unit-testing C# refactor kata",
  "main": "server.js",
  "scripts": {
    "compile-db-code": "psql -U postgres -d refactoring_test -h localhost -p 8432 -f src/procedural/pg-pl-sql/change-user-email.sql",
    "test": "npm run test:procedural-js && npm run test:procedural-db && npm run test:oop-hexagonal-event-js:char &&  npm run test:oop-hexagonal-event-js:unit",
    "test:procedural-js": "SUT=PROCEDURAL_JS mocha --exit test/characterization/change-user-email.test.js",
    "test:procedural-db": "npm run compile-db-code && SUT=PROCEDURAL_DB mocha --exit test/characterization/change-user-email.test.js",
    "test:oop-hexagonal-event-js:char": "SUT=OOP_HEXAGONAL-EVENT_JS mocha --exit test/characterization/change-user-email.test.js",
    "test:oop-hexagonal-event-js:unit": "mocha --exit src/object-oriented/hexagonal-event/test/unit/**/*.test.js",
    "show-verbosity": "node src/show-verbosity.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GradedJestRisk/refactoring-test.git"
  },
  "keywords": [
    "kata",
    "refactoring",
    "test",
    "unit test",
    "integration test",
    "hexagonal architecture",
    "javascript",
    "pg pl sql"
  ],
  "author": "https://github.com/GradedJestRisk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GradedJestRisk/refactoring-test/issues"
  },
  "homepage": "https://github.com/GradedJestRisk/refactoring-test#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "knex": "^0.21.1",
    "pg": "^8.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.5",
    "letter-count": "^2.8.9",
    "mocha": "^7.1.2",
    "nock": "^12.0.3"
  }
}
